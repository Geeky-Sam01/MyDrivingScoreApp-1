<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F4EB"
    tools:context=".dashboard">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:background="@drawable/header">

    </androidx.appcompat.widget.Toolbar>

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circleView"
        android:layout_width="191dp"
        android:layout_height="162dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="110dp"
        android:clickable="true"
        app:cpv_barColor="#C20303"
        app:cpv_barWidth="8dp"
        app:cpv_innerContourColor="#A0DEFB"
        app:cpv_outerContourColor="#A0DEFB"
        app:cpv_rimColor="#75CDF6"
        app:cpv_rimWidth="5dp"
        app:cpv_spinColor="@color/tv_total_Max"
        app:cpv_textMode="Value"
        app:cpv_textSize="44dp" />

    <TextView
        android:id="@+id/behaviour"
        android:layout_width="380dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/balsamiq_sans"
        android:gravity="center"
        android:textColor="#03486C"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_totalMax"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:text="/100"
        android:textColor="#03486C"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <Button
            android:id="@+id/short_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#8A909A"
            android:text="Short Trip"
            android:textSize="12.5dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/medium_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:backgroundTint="#8A909A"
            android:text="Medium Trip"
            android:textSize="12.5dp"
            app:cornerRadius="20dp"
            app:layout_constraintVertical_bias="0.56" />

        <Button
            android:id="@+id/long_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:backgroundTint="#8A909A"
            android:text="Long Trip"
            android:textSize="12.5dp"
            app:cornerRadius="20dp"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintVertical_bias="0.559" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="459dp"
        android:layout_marginEnd="0dp"
        android:foregroundGravity="center"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="74dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="295dp"
        app:srcCompat="@drawable/mydrivingscorelogo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/balsamiq_sans"
        android:text="My Driving Score"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        layout_constraintHorizontal_bias="0.0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="78dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="9dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="331dp"
            android:background="@color/white"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#0A98E6"
                android:textSize="14dp"
                app:cornerRadius="20dp" />

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/daily_progress"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                app:cpv_barColor="#C20303"
                app:cpv_barWidth="7dp"
                app:cpv_innerContourColor="#A0DEFB"
                app:cpv_outerContourColor="#A0DEFB"
                app:cpv_rimColor="#75CDF6"
                app:cpv_rimWidth="5dp"
                app:cpv_roundToBlock="true"
                app:cpv_spinColor="@color/tv_total_Max"
                app:cpv_textMode="Value"
                app:cpv_textSize="17dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>